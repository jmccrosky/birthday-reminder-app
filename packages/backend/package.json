    "@fastify/swagger-ui": "^3.0.0",
    "@google-cloud/pubsub": "^4.1.0",
    "@google-cloud/tasks": "^5.0.0",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.1",
    "drizzle-orm": "^0.33.0",
    "fastify": "^4.26.0",
    "node-cron": "^3.0.3",
    "pg": "^8.11.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/node": "^20.11.5",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.10.9",
    "drizzle-kit": "^0.24.0",
    "jest": "^29.7.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
