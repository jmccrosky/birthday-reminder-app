{
  "name": "backend",
  "version": "1.0.0",
  "description": "Birthday reminder backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
