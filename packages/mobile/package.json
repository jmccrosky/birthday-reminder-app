{
  "name": "mobile",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "react-native start",
    "ios": "react-native run-ios",
    "android": "react-native run-android",
    "build:ios": "cd ios && xcodebuild -workspace BirthdayReminder.xcworkspace -scheme BirthdayReminder -configuration Release -sdk iphoneos -derivedDataPath build archive -archivePath build/BirthdayReminder.xcarchive",
    "export:ios": "cd ios && xcodebuild -exportArchive -archivePath build/BirthdayReminder.xcarchive -exportPath build/output -exportOptionsPlist ExportOptions.plist",
    "deploy:testflight": "bundle exec fastlane ios beta",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "test": "jest",
    "pods": "cd ios && bundle install && bundle exec pod install"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^1.21.0",
    "@react-native-community/push-notification-ios": "^1.11.0",
    "@react-navigation/native": "^6.1.9",
    "@react-navigation/native-stack": "^6.9.17",
    "axios": "^1.6.5",
    "date-fns": "^3.2.0",
    "react": "18.2.0",
    "react-native": "0.73.2",
    "react-native-date-picker": "^5.0.0",
    "react-native-safe-area-context": "^4.8.2",
    "react-native-screens": "^3.29.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.7",
    "@babel/runtime": "^7.28.4",
    "@react-native/babel-preset": "^0.73.19",
    "@react-native/eslint-config": "^0.73.2",
    "@react-native/metro-config": "^0.73.3",
    "@react-native/typescript-config": "^0.73.1",
    "@types/react": "^18.2.48",
    "@types/react-test-renderer": "^18.0.7",
    "babel-jest": "^29.7.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.0",
    "react-test-renderer": "18.2.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18"
  }
}
